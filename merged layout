                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @* ADMIN DASHBOARD *@
                    @if (userRole == "Admin")
                    {
                        <li>@Html.ActionLink("Admin Dashboard", "Dashboard", "Admin")</li>
                    }

                    @* USER DASHBOARD (from 2nd layout) *@
                    @if (Session["FullName"] != null && userRole != "Admin")
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "UserDashboard")</li>
                    }
                </ul>

                <div class="navbar-right header-buttons">

                    @if (Session["FullName"] != null)
                    {
                        <span class="welcome-text">Welcome, @Session["FullName"]</span>
                        <button class="logout-btn"
                                onclick="window.location.href='@Url.Action("Logout","Account")'">
                            Logout
                        </button>
                    }
                    else
                    {
                        <button class="login-btn" data-toggle="modal" data-target="#loginModal">
                            Login
                        </button>
