@model StayEasePG.Models.PaymentDetailsModel
@{
    ViewBag.Title = "Payment Details";
    var paymentOptions = ViewBag.PaymentOptions as IEnumerable<SelectListItem>;
    // Total amount is available directly from the nested BookingData model
    string totalAmountDue = Model.BookingData.TotalAmount.ToString("N0");
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    /* -------------------------------------------------------------------------- */
    /* THEME VARIABLES & BASE STYLES                                              */
    /* -------------------------------------------------------------------------- */
    :root {
        --color-dark-bg: #171a21;
        --color-card-bg: #1f242d;
        --color-accent-yellow: #ffce4c;
        --color-text-light: #ffffff;
        --color-text-muted: #9fa6b3;
        --color-border: #3d4554;
        --color-primary: #ffce4c;
        --color-success: #34d399; /* Green for Completed steps/Total */
        --color-info: #007bff; /* Blue for Active steps (Can be replaced by accent yellow) */
    }

    body {
        background-color: var(--color-dark-bg) !important;
        color: var(--color-text-light);
    }

    .page-wrapper {
        padding-top: 10px;
    }
    /* -------------------------------------------------------------------------- */
    /* BOOKING CONTAINER STYLING (Matching Select Duration Page)                  */
    /* -------------------------------------------------------------------------- */
    .booking-container {
        /* Matching the max-width used in the Select Duration form */
        max-width: 700px;
        margin: 30px auto;
        padding: 35px;
        border: 1px solid var(--color-border);
        border-radius: 12px;
        background-color: var(--color-card-bg);
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
    }
    /* Header Info */
    .header-info h2 {
        color: var(--color-accent-yellow);
        font-weight: 700;
        margin: 0;
    }

    .header-info p.text-muted {
        color: var(--color-text-muted) !important;
        font-size: 0.95rem;
        margin-bottom: 5px;
    }
    /* Section Headers */
    h3 {
        color: var(--color-accent-yellow);
        font-weight: 600;
        margin-top: 25px;
        margin-bottom: 5px;
    }

    hr {
        border-top: 1px solid var(--color-border);
        margin-bottom: 20px;
    }
    /* -------------------------------------------------------------------------- */
    /* PROGRESS BAR STYLING                                                       */
    /* -------------------------------------------------------------------------- */
    .progress-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        font-weight: bold;
    }

        .progress-steps span {
            flex-grow: 1;
            text-align: center;
            color: var(--color-border); /* Muted color for inactive */
            border-bottom: 3px solid var(--color-border);
            padding-bottom: 5px;
            font-size: 0.9rem;
            text-transform: uppercase;
            margin: 0 5px;
        }

            .progress-steps span:first-child {
                margin-left: 0;
            }

            .progress-steps span:last-child {
                margin-right: 0;
            }
        /* Active Step - Use Accent Yellow */
        .progress-steps .active {
            color: var(--color-accent-yellow);
            border-bottom-color: var(--color-accent-yellow);
        }
        /* Completed Step - Use Success Green */
        .progress-steps .completed {
            color: var(--color-success);
            border-bottom-color: var(--color-success);
        }
    /* -------------------------------------------------------------------------- */
    /* FORM & INPUT STYLING                                                       */
    /* -------------------------------------------------------------------------- */
    /* Input/Select Dropdown */
    .form-control {
        background-color: #2c323c;
        color: var(--color-text-light);
        border: 1px solid var(--color-border);
        border-radius: 6px;
        padding: 10px;
        height: auto; /* Ensure dropdown height is consistent */
    }

        .form-control:focus {
            background-color: #3d4554;
            border-color: var(--color-accent-yellow);
            box-shadow: 0 0 0 0.2rem rgba(255, 206, 76, 0.25);
        }
    /* Static Text Display (e.g., Check-in Date) */
    .form-control-static {
        background-color: #2c323c;
        color: var(--color-accent-yellow); /* Highlight static info */
        border: 1px solid var(--color-border);
        border-radius: 6px;
        padding: 10px 12px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    label {
        color: var(--color-text-light);
        font-weight: 500;
        display: block; /* Make label occupy full width */
        margin-bottom: 5px;
    }

    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        display: block;
    }
    /* Total Payable Amount */
    .total-amount-display {
        font-size: 2.0em; /* Slightly larger */
        color: var(--color-success); /* Use Green for the final total */
        font-weight: bold;
        padding: 15px 0;
        margin-top: 10px;
        border-top: 2px solid var(--color-accent-yellow);
        border-bottom: 2px solid var(--color-accent-yellow);
        display: inline-block; /* Helps center the border */
    }

    .form-group.text-center {
        margin-top: 30px;
    }
    /* -------------------------------------------------------------------------- */
    /* BUTTON STYLING                                                             */
    /* -------------------------------------------------------------------------- */
    /* Back Button */
    .btn-secondary {
        background-color: transparent !important;
        border: 1px solid var(--color-border) !important;
        color: var(--color-text-light) !important;
        transition: background-color 0.2s, color 0.2s;
        border-radius: 8px;
        padding: 8px 15px;
    }

        .btn-secondary:hover {
            background-color: #3d4554 !important;
            color: var(--color-accent-yellow) !important;
        }
    /* Proceed Button (Primary/Accent Style) */
    .btn-primary {
        background-color: var(--color-primary);
        border: 2px solid var(--color-primary);
        color: var(--color-dark-bg);
        font-weight: 700;
        border-radius: 8px;
        padding: 12px 20px;
        transition: background-color 0.2s;
    }

        .btn-primary:hover {
            background-color: #ffde78;
            border-color: #ffde78;
        }
</style>
<div class="page-wrapper">
    <div class="booking-container">
        <div class="header-info">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom:15px;">
                <h2>Book Room: @Model.BookingData.RoomType</h2>
                <a href="@Url.Action("BookDuration", "PGMaster", new { pgId = Model.BookingData.PGID, roomId = Model.BookingData.RoomID })"
                   class="btn btn-secondary">
                    ← Back
                </a>
            </div>
            <p class="text-muted">@Model.BookingData.PGName - @Model.BookingData.Location</p>
        </div>
        <div class="progress-steps">
            <span class="active">1. Payment Details</span>
            <span>2. Confirm Booking</span>
            <span>3. Booking Confirmation</span>
        </div>
        <h3>Select Payment Method</h3>
        <hr />
        @using (Html.BeginForm("PaymentDetails", "PGMaster", FormMethod.Post, new { @class = "booking-form" }))
        {
            @Html.AntiForgeryToken()
            @* Hidden fields for carrying booking data forward *@
            @Html.HiddenFor(m => m.BookingData.PGID)
            @Html.HiddenFor(m => m.BookingData.RoomID)
            @Html.HiddenFor(m => m.BookingData.BookingType)
            @Html.HiddenFor(m => m.BookingData.Duration)
            @Html.HiddenFor(m => m.BookingData.TotalAmount)
            @Html.HiddenFor(m => m.BookingData.CheckInDate)
            @Html.HiddenFor(m => m.BookingData.PricePerDay)
            @Html.HiddenFor(m => m.BookingData.PricePerWeek)
            @Html.HiddenFor(m => m.BookingData.PricePerMonth)
            @Html.HiddenFor(m => m.BookingData.Maintenance)
            @Html.HiddenFor(m => m.BookingData.Advance)
            @Html.HiddenFor(m => m.BookingData.Deposit)
            <div class="form-group mb-3">
                <label>Check-in Date</label>
                <p class="form-control-static">@Model.BookingData.CheckInDate.ToShortDateString()</p>
            </div>
            <div class="form-group mb-4">
                <label>Payment Method</label>
                @Html.DropDownListFor(
                    m => m.PaymentMethod,
                    paymentOptions,
                    "--- Select Payment Method ---",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(m => m.PaymentMethod, "", new { @class = "text-danger" })
            </div>
            <div class="form-group text-center">
                <label>Total Payable Amount Today</label>
                <div class="total-amount-display">
                    ₹ @totalAmountDue
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 30px;">
                Proceed to Confirmation
            </button>
        }
    </div>
</div>