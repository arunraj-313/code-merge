@model List<StayEasePG.Models.PG>
@{
    // Assuming this is a Razor View for the homepage (Index)
    ViewBag.Title = "Stay-Ease PG - Find Your Perfect Stay";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Keep your layout reference
}
<style>
    /* -------------------------------------------------------------------------- */
    /* THEME & BASE                                        */
    /* -------------------------------------------------------------------------- */
    :root {
        --color-dark-bg: #171a21;
        --color-card-bg: #1f242d;
        --color-accent-yellow: #ffce4c;
        --color-text-light: #ffffff;
        --color-text-muted: #9fa6b3;
    }

    body {
        background-color: var(--color-dark-bg) !important;
        color: var(--color-text-light);
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    /* Titles */
    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--color-accent-yellow);
        text-align: center;
        margin-bottom: 2rem;
        margin-top: 3rem;
    }

    h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text-light);
    }
    /* Main Container: Limits width and centers content */
    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto; /* Centers the whole wrapper */
        padding: 0 15px;
    }
    /* -------------------------------------------------------------------------- */
    /* HERO SECTION                                    */
    /* -------------------------------------------------------------------------- */
    .hero {
        text-align: center;
        padding: 5rem 0 3rem;
        background-color: #1a1e26;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
    }

        .hero h1 {
            color: var(--color-accent-yellow);
            text-shadow: 0 0 10px rgba(255, 206, 76, 0.3);
        }

        .hero p {
            font-size: 1.25rem;
            color: var(--color-text-muted);
            margin-bottom: 2.5rem;
        }
    /* Search Button Styling (No animation) */
    .search-hero-btn {
        display: inline-block;
        background-color: var(--color-accent-yellow);
        color: var(--color-dark-bg);
        font-weight: 700;
        font-size: 1.2rem;
        padding: 0.8rem 2.5rem;
        border-radius: 50px;
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s;
    }

        .search-hero-btn:hover {
            background-color: #ffde78;
            transform: scale(1.05); /* Lifts slightly */
            box-shadow: 0 8px 20px rgba(255, 206, 76, 0.4);
        }
    /* -------------------------------------------------------------------------- */
    /* CITY SECTION (Fixed 4-per-row layout)                                      */
    /* -------------------------------------------------------------------------- */
    .city-section {
        padding: 2rem 0;
        text-align: center;
    }

    .city-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .city-card {
        /* Fixed width ensures exactly 4 cards fit within the container's max-width */
        width: 200px;
        background-color: var(--color-card-bg);
        padding: 15px;
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s, border 0.2s;
        cursor: pointer;
        border: 2px solid transparent;
        box-sizing: border-box; /* Includes padding/border in the width */
    }

        .city-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.6);
            border-color: var(--color-accent-yellow);
        }

    .city-img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .city-name {
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--color-text-light);
    }
    /* -------------------------------------------------------------------------- */
    /* FEATURES GRID (Why Stay-Ease)                                              */
    /* -------------------------------------------------------------------------- */
    .features-section {
        padding: 2rem 0 4rem;
        background-color: #1a1e26;
    }

    .features-grid {
        display: flex;
        justify-content: center;
        flex-wrap: wrap; /* Allows wrapping on smaller screens */
        gap: 30px;
        padding: 0 15px;
    }

    .feature-card {
        width: 280px; /* Fixed width */
        background-color: var(--color-card-bg);
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
        text-align: center;
        transition: background-color 0.3s;
    }

        .feature-card:hover {
            background-color: #2c323c;
        }

    .feature-icon {
        margin: 0 auto 15px;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: #0f1a2e;
    }

    .feature-card h3 {
        color: var(--color-accent-yellow);
        margin-bottom: 10px;
    }

    .feature-card p {
        color: var(--color-text-muted);
    }
    /* -------------------------------------------------------------------------- */
    /* FEATURED PGs                                                               */
    /* -------------------------------------------------------------------------- */
    .featured {
        padding: 4rem 0;
    }

        .featured h2 {
            color: var(--color-text-light);
            text-align: center;
            margin-bottom: 2.5rem;
        }

    .featured-row {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .featured-card {
        width: 300px; /* Fixed width */
        background-color: var(--color-card-bg);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s;
    }

        .featured-card:hover {
            transform: translateY(-8px);
        }

        .featured-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .featured-card h3, .featured-card p {
            padding: 0 15px;
        }

        .featured-card button {
            background-color: var(--color-accent-yellow);
            color: var(--color-dark-bg);
            border: none;
            width: calc(100% - 30px);
            padding: 10px;
            margin: 0 15px 15px 15px;
            border-radius: 8px;
            font-weight: 700;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .featured-card button:hover {
                background-color: #ffde78;
            }
    /* -------------------------------------------------------------------------- */
    /* WHY CHOOSE EASYSTAY (Final feature section)                                */
    /* -------------------------------------------------------------------------- */
    .features {
        padding: 4rem 0;
        background-color: #1a1e26;
    }

        .features h2 {
            color: var(--color-accent-yellow);
        }

    .feature-row {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .feature-box {
        width: 300px; /* Fixed width */
        text-align: center;
        padding: 20px;
        background-color: var(--color-card-bg);
        border-radius: 12px;
    }

        .feature-box .icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .feature-box h4 {
            color: var(--color-text-light);
            font-size: 1.15rem;
            margin-bottom: 5px;
        }

        .feature-box p {
            color: var(--color-text-muted);
            font-size: 0.9rem;
        }
</style>
