@model List<StayEasePG.Models.PaymentModel>
@{
    ViewBag.Title = "PG Booking & Payment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    /* -------------------------------------------------------------------------- */
    /* THEME VARIABLES (Consistent with previous pages)                             */
    /* -------------------------------------------------------------------------- */
    :root {
        --bg: #0f1215;
        --panel: #1d2227;
        --text: #e9eef2;
        --sub: #a9b0b6;
        --accent: #ffce4c; /* Gold Accent */
        --accent2: #c9a34f;
        --border-color: rgba(255, 206, 76, 0.1);
        --primary: #ffce4c; /* Gold Accent */
        --secondary: #343a40; /* Dark for Back button */
        --success: #28a745; /* Green for Check-In */
        --danger: #e74c3c; /* Red for Check-Out */
        --info: #3498db; /* Blue for Completed status text */
        --radius: 8px;
        font-family: 'Inter', sans-serif;
    }
    /* Page Header and Back Button */
    h2 {
        font-size: 34px;
        font-weight: 800;
        color: var(--accent);
        margin: 30px 0 20px 0;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border-color);
    }
    /* Standard Button Styling */
    .btn-custom {
        padding: 8px 15px;
        border-radius: 999px; /* Pill shape */
        font-weight: 600;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
        display: inline-block;
    }
    /* Back Button (Secondary/Muted) */
    .btn-secondary {
        background-color: var(--secondary);
        color: var(--text);
    }

        .btn-secondary:hover {
            background-color: #495057;
            color: var(--text);
        }
    /* -------------------------------------------------------------------------- */
    /* TABLE STYLING */
    /* -------------------------------------------------------------------------- */
    .table-responsive-container {
        overflow-x: auto;
        margin-bottom: 30px;
    }

    .table-bordered {
        min-width: 1300px; /* Ensure wide enough for all columns */
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 15px;
        border: 1px solid var(--border-color);
        border-radius: var(--radius);
        overflow: hidden;
        background-color: var(--panel);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

        .table-bordered th,
        .table-bordered td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            border-right: 1px solid rgba(255, 255, 255, 0.05);
            color: var(--text);
            font-size: 13px;
            vertical-align: middle;
        }
        /* Table Header */
        .table-bordered thead tr {
            background-color: #171a21;
        }

        .table-bordered th {
            color: var(--accent);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 11px;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }
        /* Table Body */
        .table-bordered tbody tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .table-bordered tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }
    /* Dynamic Status and Action Button Styling */
    .btn-sm {
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        display: inline-block;
        white-space: nowrap;
        line-height: 1.5;
        transition: background-color 0.2s;
    }

    .btn-success {
        background-color: var(--success); /* Green for Check-In */
        color: var(--text);
        box-shadow: 0 2px 4px rgba(40, 167, 69, 0.4);
    }

    .btn-danger {
        background-color: var(--danger); /* Red for Check-Out */
        color: var(--text);
        box-shadow: 0 2px 4px rgba(231, 76, 60, 0.4);
    }

        .btn-success:hover, .btn-danger:hover {
            opacity: 0.9;
        }

    .text-primary {
        color: var(--info); /* Blue for Completed status */
        font-weight: 600;
    }

    .status-active {
        color: var(--success);
        font-weight: 600;
    }

    .status-checkedin {
        color: var(--accent); /* Gold for CheckedIn */
        font-weight: 600;
    }

    .status-completed {
        color: var(--info);
        font-weight: 600;
    }
    /* Column specific styling for better alignment */
    .table-bordered td:nth-child(9), /* Amount */
    .table-bordered th:nth-child(9) {
        text-align: right;
    }
</style>
<div class="payment-list-container">
    <h2 style="display:flex; justify-content:space-between; align-items:center;">
        PG Booking & Payment Details
        <a href="@Url.Action("Dashboard","Admin")" class="btn-custom btn-secondary">
            ← Back
        </a>
    </h2>
    <div class="table-responsive-container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>ID Proof</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Room Type</th>
                    <th>Check-In Date</th>
                    <th>Booking Type</th>
                    <th>Payment Method</th>
                    <th style="text-align: right;">Amount (₹)</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.IDProof</td>
                        <td>@item.Phone</td>
                        <td>@item.Address</td>
                        <td>@item.RoomType</td>
                        <td>@item.CheckInDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.BookingType</td>
                        <td>@item.Payment</td>
                        <td style="text-align: right;">₹@item.Amount</td>
                        @* Apply custom status styling *@
                        <td>
                            <span class="status-@item.BookingStatus.ToLower()">
                                @item.BookingStatus
                            </span>
                        </td>
                        <td>
                            @* SHOW CHECK-IN BUTTON (Active status) *@
                            @if (item.BookingStatus == "Active" && item.CheckOutDate == null)
                            {
                                <a href="/Payment/CheckIn/@item.BookingID"
                                   class="btn btn-success btn-sm">Check-In</a>
                            }
                            @* SHOW CHECK-OUT BUTTON (CheckedIn status) *@
                            @if (item.BookingStatus == "CheckedIn" && item.CheckOutDate == null)
                            {
                                <a href="/Payment/CheckOut/@item.BookingID"
                                   class="btn btn-danger btn-sm">Check-Out</a>
                            }
                            @* SHOW COMPLETED LABEL (After Check-Out) *@
                            @if (item.CheckOutDate != null)
                            {
                                <span class="status-completed">Completed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>